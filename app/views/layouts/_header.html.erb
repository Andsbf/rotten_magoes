<div class="header clearfix">
  <nav>
    <ul class="nav nav-pills pull-right">
      <% if current_user %>

        <% if current_user.admin? %>
          <li role="presentation"><%= link_to "Admin Stuff", admin_users_path %></li>
        <% end %>
        <% if session[:admin_id] %>
          <li role="presentation"><%= link_to "exit view mode", exit_view_mode_admin_users_path %></li>
        <% end %>
        <li role="presentation" style="padding: 10px 15px 10px 15px">Signed in as <%= current_user.full_name %></li>
        <li role="presentation" class="active"><%= link_to "Log out", session_path("current"), method: :delete %></li>
      <% else %>
        <li role="presentation"><%= link_to "Log In", new_session_path %></li>
        <li role="presentation"><%= link_to "Sign Up", new_user_path %></li>
      <% end %>
    </ul>
  </nav>
  <h3 class="text-muted"><%= link_to "Rotten Mangoes", root_path %></h3>
</div>
  