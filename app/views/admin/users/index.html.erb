 <div class="row marketing" style='text-align:center'>
 <div style="height: 70px;">
   <div class="pull-left" style="padding-top: 18px">
      <%= link_to new_admin_user_path,:class=>"btn btn-info" do %>
      <i class="glyphicon glyphicon-plus"></i> Create a new user
    <% end %>  
    </div>
    <div class="pull-right">
      <%= paginate @users %>
    </div>
  </div>
  <div class="bs-example" data-example-id="striped-table">
      
      <table class="table table-striped" style="font-size:11px; white-space: nowrap " >
        
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th >Created @</th>
            <th>Updated @</th>
            <th>Admin</th>
            <th>Option</th>
            <th>View mode</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.firstname %></td>
              <td><%= user.lastname %></td>
              <td><%= user.created_at %></td>
              <td><%= user.updated_at %></td>
              <td><%= user.admin %></td>
              <td><%=link_to "Edit", edit_admin_user_path(user) %></td>
              <td style="text-align:center">
                  <%= link_to view_mode_admin_user_path(user.id) do %>
                    <i class="glyphicon glyphicon-eye-open"></i>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>


     