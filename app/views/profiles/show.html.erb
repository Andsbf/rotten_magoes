<h3>First name: <%= @user.firstname %></h3>
<h3>Last name: <%= @user.lastname %></h3>
<h3>Account created: <%= @user.created_at %></h3>

<h3><%= @user.firstname %>'s Reviews:</h3>
  <% @user.reviews.each do |review|  %>
    <div class='container' style="width: 800px; border: 2px solid; border-color: #eee; border-radius: 8px;">
      <p>Movie: <%= link_to review.movie.title, movie_path(review.movie) %></p>
      <p>review: <%= review.text %></p>
      <p>rating: <%= review.rating_out_of_ten %>/10</p>
    </div>  
  <% end %>
